public class Weapon
{
    private const int _numberPerShot = 1;

    private int _bullets;

    public bool CanShoot => _bullets >= _numberPerShot;

    public void Shoot()
    {
        if(!CanShoot)
        {
            throw new InvalidOperationException("Недостаточно пуль для выстрела.");
        }

        _bullets -= _numberPerShot;
    }
}
